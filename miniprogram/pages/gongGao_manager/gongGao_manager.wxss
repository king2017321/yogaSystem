page {
  height: 100%;
}

.title {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  background-color: rgba(112, 110, 110, 0.555);
  height: 130rpx;
  font-size: 35rpx;
  font-weight: 600rpx;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

.top {
  height: 115rpx;
  display: flex;
  margin-top: 10rpx;
  font-size: 27rpx;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
}

.text {
  font-size: 27rpx;
  display: flex;
  width: 100%;
  margin-top: 10rpx;
  border-radius: 20rpx;
  background-color: white;
}
.operate {
  font-size: 35rpx;
  width: 100%;
  border-radius: 40rpx;
  height: 100rpx;
  justify-content: center;
  align-items: center;
}
