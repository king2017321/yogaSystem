page {
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
}
.gongGao_contain {
  height: 100rpx;
  margin-top: 10rpx;
  background-color: white;
  font-size: 30rpx;
  width: 100%;
  align-items: center;
  display: flex;
  justify-content: space-around;
}
.gongGao_contain >text:last-child{
  font-size: 25rpx;
  opacity: 0.7;
  display: flex;
  justify-content: center;
  /* justify-items: center; */
}
.title {
  background-color: white;
  width: 100%;
  height: 120rpx;
  font-size: 35rpx;
  display: flex;
  align-items: center;
}

.small_title {
  width: 100%;
  font-size: 30rpx;
}
.top {
  background-color: white;
  width: 100%;
}

.text {
  width: 100%;
  font-size: 30rpx;
  flex-wrap: wrap;
}
.time {
  width: 100%;
  font-size: 25rpx;
  opacity: 0.7;
  display: flex;
}
.operate {
  font-size: 35rpx;
  width: 100%;
  margin-top:10rpx; 
  border-radius: 40rpx;
  height: 100rpx;
  background-color: white;
  justify-content: center;
  align-items: center;
}